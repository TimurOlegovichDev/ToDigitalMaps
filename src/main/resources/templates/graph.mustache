<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Graph</title>
    <link rel="stylesheet" href="graphStyle.css">
</head>
<body>

<canvas id="myChart"></canvas>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const labels = ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь','dsawd','wadwad','dsa'];
    const data = {
        labels: labels,
        datasets: [
            {
                label: 'Температура',
                data: [-15,-10, -5, 10, 20, 30],
                backgroundColor: 'rgba(255,0,0)',
                borderColor: "rgba(255,99,132,1)",
            },
            {
                label: 'Просто график',
                data: [100,10,20,30,10,30,40,100],
                backgroundColor: 'rgba(0,0,255)',
                borderColor: "rgba(0,0,255)",
            }]
    };

    // Настройка графика
    const config = {
        type: 'line',
        data: data,
    };

    // Рисование графика на основе данных и настроек
    new Chart(
            document.getElementById('myChart'),
            config
    );


</script>
</body>
</html>